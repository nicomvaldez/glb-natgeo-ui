//Full Eric Meyer CSS Reset
global-reset();
reset-html5();

.clear
    clear both

#wrapper
    width 900px
    margin auto
    font-family verdana
    font-size 12px

li.list
    border-top 1px solid #96d1f8
    background linear-gradient(top, 65a9d7, content_bg)
    background content_bg
    padding 5px 10px
    border-radius (8px)
    box-shadow (black 0 1px 0)
    text-shadow rgba(0,0,0,.4) 0 1px 0
    color white
    text-decoration none
    vertical-align middle
    text-transform capitalize
    list-style none
    width 100px
    cursor pointer
    margin 3px

li.list:hover
    border-top-color hover  
    background hover
    color #ccc

li.list:active
    border-top-color activate
    background activate

header, footer
    text-shadow rgba(0,0,0,.4) 0 1px 0
    color white
    font-size 14px
    text-decoration none
    clear both
    background content_bg
    
header
    padding 10px
    text-align center
    h1
        font-size 24px

footer
    height 20px
    padding 5px
    text-align center

#menu
	float left
	height 80%
	width 10%

#container
    padding-top 10px
    
.field
    display block
    margin-top 5px
    margin-bottom 5px
    div
        float left
        width 200px
        
.filters, #addTopo
    background-color activate
    padding 10px
    width 40%
    float left
    height 150px
    
#addTopo
    color #FFFFFF
    padding-top 10px